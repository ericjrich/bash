#!/usr/bin/env bash
#e-av-duration-rename-mp4.eb
#2022-10-21-1715 EJR
#===========================================================================
for i in *.mp4 #============ STARTING THE LOOP ====================================================
  do 
    #-----MAKING MY VARIABLES---------------------------------------------------------------------
    edo=$(ffprobe -v error -select_streams v:0 -show_entries stream=duration -of csv=s=x:p=0 "$i")
    edo=${edo/.*}
    edo=$((edo / 60))
    ed=${edo/.*}
    mv $i "${ed}_m-${i}"
done
