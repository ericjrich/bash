#!/usr/bin/env bash
#e-countdown.eb
#2022-10-21-1715 EJR
#===========================================================================

min=$(( $1 + 0 ))
sec=$(( $2 + 0 ))

while [ $min -ge 0 ]; do
  while [ $sec -ge 0 ]; do
    echo -ne "$min m:$sec s\033[0K\r"
    let "sec=sec-1"
    sleep 1
  done
  sec=59
  let "min=min-1"
done

spd-say "Move And Drink"
